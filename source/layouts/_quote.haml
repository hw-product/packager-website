%div.quote
  = stylesheet_link_tag "quote"
  %div.row
    %div.col-sm-1.col-xs-12
      %i.fa.fa-quote-left.pull-left
    %div.col-sm-10.col-xs-12
      -if content.quote == ""
        %div.quote.temp= lorem.paragraph
      - else
        %div.quote= content.quote
    %div.col-sm-1.col-xs-12
      %i.fa.fa-quote-right.pull-right
  - if content.has_key?("author")
    %div.attribution
      %div.row
        %div.col-sm-12
          %span.strong.pull-right= "- #{content.author}"
